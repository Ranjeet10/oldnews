<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/screen_padding_lr"
    android:layout_marginRight="@dimen/screen_padding_lr"
    android:layout_marginTop="@dimen/screen_padding_lr"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_title_image_w"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gallery_thumbnail"
            android:layout_width="@dimen/news_title_image_h"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/andyrubin" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/gallery_thumbnail"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/screen_padding_lr"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gallery_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_padding_lr"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="This is title"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gallery_item_date"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/screen_padding_lr"
                android:layout_height="wrap_content"
                android:text="2012-12-12"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>