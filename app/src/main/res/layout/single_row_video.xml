<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/screen_padding_lr"
    android:layout_marginRight="@dimen/screen_padding_lr"
    android:layout_marginTop="@dimen/screen_padding_lr"
    android:elevation="2dp"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_title_image_w"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gallery_thumbnail"
            android:layout_width="@dimen/news_title_image_h"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/andyrubin" />


        <TextView
            android:layout_marginTop="@dimen/screen_padding_lr"
            android:layout_toRightOf="@id/gallery_thumbnail"
            android:layout_marginLeft="@dimen/screen_padding_lr"
            android:id="@+id/gallery_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/grey"
            android:textStyle="bold" />

        <TextView

            android:layout_toRightOf="@id/gallery_thumbnail"
            android:layout_marginLeft="@dimen/screen_padding_lr"
            android:id="@+id/gallery_item_no_of_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />


        <TextView
            android:layout_marginBottom="@dimen/screen_padding_lr"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/gallery_thumbnail"
            android:layout_marginLeft="@dimen/screen_padding_lr"
            android:id="@+id/gallery_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </RelativeLayout>
</android.support.v7.widget.CardView>