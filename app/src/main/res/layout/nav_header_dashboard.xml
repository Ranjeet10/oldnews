<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height">

        <ImageView
            android:id="@+id/nav_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/andyrubin" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/switch_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/screen_padding"
            android:text="switch to"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch_head"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/switch_republica"
                style="@style/switch_menu_style"
                android:text="Republica" />

            <TextView
                android:id="@+id/switch_nagarik"
                style="@style/switch_menu_style"
                android:text="@string/nagarik" />

            <TextView
                android:id="@+id/switch_sukrabar"
                style="@style/switch_menu_style"
                android:text="Sukrabar" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
