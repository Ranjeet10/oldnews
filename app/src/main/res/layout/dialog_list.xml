<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_dialog_parent_"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_white_bg"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding_lr">

    <LinearLayout
        android:id="@+id/save_share_layout"
        style="@style/wrap_wrap"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/saveLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/transparent_btn_grey_focus">

            <ImageView
                android:id="@+id/share_image"
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_save_black_24dp" />

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/screen_padding"
                android:layout_toRightOf="@id/share_image"
                android:text="Save" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_red_grey" />

        <RelativeLayout
            android:id="@+id/shareLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/transparent_btn_grey_focus">

            <ImageView
                android:id="@+id/save_image"
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_share_black" />

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/screen_padding"
                android:layout_toRightOf="@id/save_image"
                android:text="Share" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/epaper_option_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:paddingLeft="@dimen/badge_padding"
            android:id="@+id/menu_purweli"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/transparent_btn_grey_focus"
            android:gravity="center_vertical"
            android:text="@string/purbeli" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_red_grey" />

        <TextView
            android:id="@+id/menu_paschimi"
            android:paddingLeft="@dimen/badge_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/transparent_btn_grey_focus"
            android:gravity="center_vertical"
            android:text="@string/paschimeli" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_red_grey" />

        <TextView
            android:id="@+id/menu_all_epaper_nagarik"
            android:paddingLeft="@dimen/badge_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/transparent_btn_grey_focus"
            android:gravity="center_vertical"
            android:text="@string/nagarik" />

    </LinearLayout>

</LinearLayout>