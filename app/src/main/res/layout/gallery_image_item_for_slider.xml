<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent2">


    <com.bajratechnologies.nagariknews.views.customviews.TouchImageView
        android:id="@+id/gallery_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:background="@color/transparent2"
        android:gravity="center"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/image_loading_progress"
        android:layout_width="@dimen/news_title_image_h"
        android:layout_height="@dimen/news_title_image_h"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/reload_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/corner_border_transparent_primary_selector"
        android:padding="@dimen/tab_bar_menu_margin"
        android:src="@mipmap/ic_refresh_black_24dp"
        android:tint="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_gallery_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_padding"
        android:src="@mipmap/ic_more_vert_black_24dp"
        android:tint="@color/white" />
</RelativeLayout>