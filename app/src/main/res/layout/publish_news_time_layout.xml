<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/publish_text_view"
        style="@style/news_publish_time_text_style"
        android:text="Lary page"
        android:textColor="@color/grey" />

    <View
        android:id="@+id/vertical_view"
        android:layout_width="1dp"
        android:layout_height="@dimen/vertical_bar_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/screen_padding_lr"
        android:layout_marginRight="@dimen/screen_padding_lr"
        android:layout_toRightOf="@id/publish_text_view"
        android:background="@color/light_grey" />

    <TextView
        android:id="@+id/news_time_text_view"
        style="@style/news_publish_time_text_style"
        android:layout_toRightOf="@id/vertical_view"
        android:text="Jan 22 2016" />
</RelativeLayout>