<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!--<style name="BaseTheme" parent="android:Theme.Material.NoActionBar">-->
        <item name="colorPrimary">@color/colorPrimary</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> 
        <item name="colorControlHighlight">@color/light_red_grey</item> 
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="selectableItemBackground">@drawable/selectable_item_background</item>-->
        <!--<item name="android:selectableItemBackground">@drawable/selectable_item_background</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_style" parent="match_wrap">

        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/corner_button_primary_selector</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="auto_edit_text_style" parent="match_wrap">
        <item name="android:background">@color/transparent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="form_cell_parent_layout" parent="match_wrap">
        <item name="android:layout_marginTop">@dimen/screen_padding</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="news_detail_buttons_style" parent="wrap_wrap">
        <item name="android:padding">@dimen/screen_padding_lr</item>
    </style>

    <style name="news_publish_time_text_style" parent="wrap_wrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="tab_menu_items_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/screen_padding</item>
        <item name="android:paddingTop">@dimen/screen_padding</item>
    </style>

</resources>
