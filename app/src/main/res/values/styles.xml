<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<style name="BaseTheme" parent="android:Theme.Material.NoActionBar">-->
        <item name="colorPrimary">@color/colorPrimary</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> 
        <item name="colorControlHighlight">@color/light_red_grey</item> 
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/light_red_grey</item>
        <!--<item name="selectableItemBackground">@drawable/selectable_item_background</item>-->
        <!--<item name="android:selectableItemBackground">@drawable/selectable_item_background</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_style" parent="match_wrap">

        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/corner_button_primary_selector</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="auto_edit_text_style" parent="match_wrap">
        <item name="android:background">@color/transparent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="form_cell_parent_layout" parent="match_wrap">
        <item name="android:layout_marginTop">@dimen/screen_padding</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="news_detail_buttons_style" parent="wrap_wrap">
        <item name="android:padding">@dimen/screen_padding_lr</item>
    </style>

    <style name="news_publish_time_text_style" parent="wrap_wrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="tab_menu_items_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/screen_padding</item>
        <item name="android:paddingTop">@dimen/screen_padding</item>
    </style>

    <style name="badge_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:background">@color/badge_color_orange</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/screen_padding_lr</item>
        <item name="android:layout_marginBottom">@dimen/screen_padding_lr</item>
        <item name="android:paddingBottom">@dimen/badge_padding</item>
        <item name="android:paddingTop">@dimen/badge_padding</item>
        <item name="android:paddingRight">@dimen/screen_padding_lr</item>
        <item name="android:paddingLeft">@dimen/screen_padding_lr</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:visibility">visible</item>
        <item name="android:text">BREAKING NEWS</item>

    </style>

    <!-- animation-->
    <!--For location popupmenu-->
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>
    <!-- Animation for dialog box -->
    <style name="SlideAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_padding_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">25</item>
        <item name="android:paddingLeft">11dip</item>
        <item name="android:paddingRight">11dip</item>
    </style>

    <style name="switch_menu_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/screen_padding_lr</item>
        <item name="android:layout_marginLeft">@dimen/screen_padding_lr</item>
        <item name="android:layout_marginRight">@dimen/screen_padding_lr</item>
        <item name="android:background">@drawable/corner_border_transparent_primary_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/screen_padding</item>
        <item name="android:paddingBottom">@dimen/screen_padding</item>
        <item name="android:paddingLeft">@dimen/tab_bar_menu_margin</item>
        <item name="android:paddingRight">@dimen/tab_bar_menu_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="share_rate_news_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawable">@drawable/transparent_btn_background</item>
        <item name="android:paddingLeft">@dimen/screen_padding</item>
        <item name="android:paddingRight">@dimen/screen_padding</item>
        <item name="android:paddingTop">@dimen/screen_padding_lr</item>
        <item name="android:paddingBottom">@dimen/screen_padding_lr</item>
        <item name="android:tint">@color/light_grey</item>
    </style>

</resources>


